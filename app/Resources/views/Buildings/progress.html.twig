{% extends 'base.html.twig' %}

{% block body_id "progress" %}



{% block main %}


    {% block javascripts %}
        <script src="{{ asset('js/timer.js') }}"></script>
    {% endblock %}

    <div>Build in progress</div>
    <table class="table-responsive table table-bordered table-hover table-condensed">
        <thead>
            <th>
                Building
            </th>
            <th>Ready after</th>
        </thead>
        {% for building in progressBuildings %}

           <!-- <script>showTime('{{ building['readyAfter'] }}')</script>  -->
        <tr>
            <td>{{ building['building'] }}</td>
            <td>{{ building['readyAfter'] }}</td>
        </tr>
        {% endfor %}
    </table>
    <br>

    <div>Level Up in progress</div>
    <table class="table-responsive table table-bordered table-hover table-condensed">
        <thead>
        <th>
            Building
        </th>
        <th>Level after</th>
        </thead>
        {% for building in levelBuildings %}
            <tr>
                <td>{{ building['buildingName'] }}</td>
                <td>{{ building['readyAfter'] }}</td>
            </tr>
        {% endfor %}
    </table>

    <br>

    <div>Units in progress</div>
    <table class="table-responsive table table-bordered table-hover table-condensed">
        <thead>
        <th>
            Unit
        </th>
        <th>Ready after</th>
        </thead>
        {% for unit in units %}
            <tr>
                <td>{{ unit['name'] }}</td>
                <td>{{ unit['readyAfter'] }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}

