
{% extends 'base.html.twig' %}

{% block body_id 'profile' %}


{% block main %}
    <div class="register">
        <div class="well">
            <form class="form-horizontal" action="{{ path('edit_profile') }}" method="post" name="edit">
                <fieldset>
                    <legend>Profile</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_email">Email</label>
                        <div class="col-sm-4 ">
                            <input class="form-control" id="user_email" name="user[email]" required type="email" value="{{ user.email }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_fullName">Username</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="user_fullName" name="user[fullName]" required value="{{ user.fullName }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}